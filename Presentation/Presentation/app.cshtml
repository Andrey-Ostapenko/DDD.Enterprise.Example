@inherits ViewPage
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Durandal Starter Kit</title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-landscape.png" media="(orientation:landscape)" />
    <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-portrait.png" media="(orientation:portrait)" />
    <link rel="apple-touch-icon" href="~/Content/images/icon.png" />

    <link rel="stylesheet" href="~/Content/site.min.css" />

    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>
</head>
<body>
    <div id="applicationHost">
        @Html.Partial("Views/_splash")
    </div>

    <script type="text/javascript" src="~/Scripts/boot.min.js"></script>
    <script type="text/javascript" src="~/js/ss-utils.js"></script>

    <script type="text/javascript" src="~/Scripts/require.js" data-main="/App/main"></script>

    <script type="text/javascript">
        var itemEventHandler = {
            Created: function (data) {
                console.log( data);
            },
            DescriptionChanged: function (data) {
                console.log( data);
            }
        };

        $(document).ready(function () {
            var source = new EventSource('/event-stream?channel=events&t=' + new Date().getTime());

            source.addEventListener('error', function (e) {
                console.log("ERROR!", e);
            }, false);

            $.ss.eventReceivers = { 'Item': itemEventHandler };


            $(source).handleServerEvents({
                handlers: {
                    onConnect: function (subscription) {
                        activeSub = subscription;
                        console.log("Connected!");
                    },
                    success: function (selector, msg, json) {
                        console.log(selector, msg, json);
                    }
                }
            });
        });
    </script>

</body>
</html>
